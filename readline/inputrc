set editing-mode vi
set keymap vi
set completion-ignore-case on
#set input-meta on


"\C-n":next-history
"\C-a.":beginning-of-line
"\C-e.":end-of-line
"\C-L":clear-screen
#set output-meta on

# Use Alt/Meta + Delete to delete the preceding word
"\e[3;3~": kill-word

# Enable Alt-arrows
"\e[1;5D": backward-word ### Alt left
"\e[1;5C": forward-word ### Alt right
